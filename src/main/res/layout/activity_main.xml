<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingBottom="8dip"
        android:layout_marginTop="-20dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.55"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/blockMargin">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="0.62"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/blockMargin"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/connect_device_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/blockMargin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_device_connect">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_connect_device"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自平衡车演示"
                            android:layout_marginLeft="-8dip"
                            style="@style/blockTextStyle"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/manual_control_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/blockMargin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/colorManualControl">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_manual_ctrl"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="麦轮车演示"
                            android:layout_marginLeft="-8dip"
                            style="@style/blockTextStyle"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/manual_control_block_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlockMask"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/paras_setting_block"
                android:layout_width="0dip"
                android:layout_weight="0.38"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/blockMargin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorParasSetting">
                    <ImageView
                        android:id="@+id/img_paras_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_paras_setting"
                        android:layout_centerInParent="true"
                        android:paddingBottom="18dip"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="语音演示"
                        android:layout_below="@id/img_paras_setting"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-18dip"
                        style="@style/blockTextStyle"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/paras_setting_block_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlockMask"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!-- ///////// -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.45"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/blockMargin">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="0.53"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/blockMargin">
                <android.support.v7.widget.CardView
                    android:id="@+id/model_edit_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/blockMargin">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edit_model">
                        <ImageView
                            android:id="@+id/img_edit_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_edit_model"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="机械臂演示"
                            android:layout_toLeftOf="@id/img_edit_model"
                            android:layout_marginRight="-16dip"
                            style="@style/blockTextStyle"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/model_edit_block_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlockMask"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/machines_group_block"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/blockMargin">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_machines_group"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_machines_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_machines_group"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:layout_toLeftOf="@id/img_machines_group"
                            android:layout_marginRight="-16dip"
                            style="@style/blockTextStyle"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/machines_group_block_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlockMask"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/status_checking_block"
                android:layout_width="0dip"
                android:layout_weight="0.47"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/blockMargin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorStatusCheck">
                    <ImageView
                        android:id="@+id/img_status_checking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="20dip"
                        android:src="@mipmap/ic_status_checking"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_status_checking"
                        android:layout_marginTop="-26dip"
                        android:text=""
                        style="@style/blockTextStyle"/>
                </RelativeLayout>
                <View
                    android:id="@+id/status_checking_block_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlockMask"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/head"
        android:scaleType="fitXY"/>
</RelativeLayout>
